generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BudgetItem {
  id                     Int       @id @default(autoincrement())
  category               String?
  subcategory            String?
  description            String
  itemType               String?
  unit                   String?
  quantity               Int       @default(1)
  depreciationMonths     Int?

  totalEstCost           Float?
  additionalCostRevision Float?
  totalCostAfterRevision Float?
  actualPrice            Float?
  capexNeeded            Boolean   @default(false)

  tenderStatus           String?
  tenderStartDate        DateTime?
  tenderDeadline         DateTime?
  orderPlaceDate         DateTime?
  deliveryDate           DateTime?

  approval               String?
  chosenSupplier         String?
  bottleneck             String?
  notes                  String?
  checklistJson          String    @default("[]")

  responsibleId          Int?
  responsible            Person?   @relation(fields: [responsibleId], references: [id])

  priorityId             Int?
  priority               Priority? @relation(fields: [priorityId], references: [id])

  comments               Comment[]

  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
}

model Comment {
  id        Int        @id @default(autoincrement())
  itemId    Int
  item      BudgetItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  author    String     @default("System")
  text      String
  createdAt DateTime   @default(now())
}

model Person {
  id         Int          @id @default(autoincrement())
  name       String
  email      String?
  department String?
  items      BudgetItem[]
}

model Priority {
  id    Int          @id @default(autoincrement())
  name  String
  color String       @default("#FFCC00")
  rank  Int          @default(0)
  items BudgetItem[]
}

model Category {
  id            Int    @id @default(autoincrement())
  name          String @unique
  subcategories String @default("[]")
}

model Settings {
  key   String @id
  value String
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  user      String   @default("System")
  category  String   @default("Budget Tracker")
  entity    String
  action    String
  entityId  Int?
  summary   String
}

model LaborCost {
  id         Int              @id @default(autoincrement())
  role       String
  personName String?
  mdRate     Float            @default(0)
  mdDays     Float            @default(0)
  costType   String           @default("Project")
  department String?
  notes      String?
  spent      Float?
  entries    LaborRoleEntry[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
}

model LaborRoleEntry {
  id          Int       @id @default(autoincrement())
  laborCostId Int
  laborCost   LaborCost @relation(fields: [laborCostId], references: [id], onDelete: Cascade)
  date        DateTime
  amount      Float
  note        String?
  createdAt   DateTime  @default(now())
}

model LaborSpentLog {
  id        Int      @id @default(autoincrement())
  date      DateTime
  amount    Float
  note      String?
  createdAt DateTime @default(now())
}

// ── Testing ──────────────────────────────────────────────────────────────────

model TestSet {
  id        Int        @id @default(autoincrement())
  name      String
  dateMin   DateTime?
  dateMax   DateTime?
  notes     String?
  testCases TestCase[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model TestCase {
  id        Int        @id @default(autoincrement())
  testSetId Int
  testSet   TestSet    @relation(fields: [testSetId], references: [id], onDelete: Cascade)
  name      String
  status    String     @default("WIP")
  notes     String?
  testedBy  String?
  testedAt  DateTime?
  dataUsed  String?
  order     Int        @default(0)
  steps     TestStep[]
  defects   Defect[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model TestStep {
  id         Int      @id @default(autoincrement())
  testCaseId Int
  testCase   TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  order      Int      @default(0)
  description String
  status     String   @default("WIP")
  testedBy   String?
  testedAt   DateTime?
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Defect {
  id          Int      @id @default(autoincrement())
  testCaseId  Int
  testCase    TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  title       String
  description String?
  severity    String   @default("Medium")
  status      String   @default("Open")
  reportedBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
