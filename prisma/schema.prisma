generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BudgetItem {
  id                     Int       @id @default(autoincrement())
  projectId              Int       @default(1)
  category               String?
  subcategory            String?
  description            String
  itemType               String?
  unit                   String?
  quantity               Int       @default(1)
  depreciationMonths     Int?

  totalEstCost           Float?
  additionalCostRevision Float?
  totalCostAfterRevision Float?
  actualPrice            Float?
  capexNeeded            Boolean   @default(false)

  tenderStatus           String?
  tenderStartDate        DateTime?
  tenderDeadline         DateTime?
  orderPlaceDate         DateTime?
  deliveryDate           DateTime?

  approval               String?
  chosenSupplier         String?
  bottleneck             String?
  notes                  String?
  checklistJson          String    @default("[]")

  responsibleId          Int?
  responsible            Person?   @relation(fields: [responsibleId], references: [id])

  priorityId             Int?
  priority               Priority? @relation(fields: [priorityId], references: [id])

  comments               Comment[]

  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
}

model Comment {
  id        Int        @id @default(autoincrement())
  projectId Int        @default(1)
  itemId    Int
  item      BudgetItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  author    String     @default("System")
  text      String
  createdAt DateTime   @default(now())
}

model Person {
  id              Int             @id @default(autoincrement())
  name            String
  email           String?
  department      String?
  items           BudgetItem[]
  ownedRisks       Risk[]          @relation("RiskOwner")
  ownedIssues      Issue[]         @relation("IssueOwner")
  requestedCRs     ChangeRequest[] @relation("CRRequestedBy")
  approvedCRs      ChangeRequest[] @relation("CRApprovedBy")
  ownedAssumptions Assumption[]    @relation("AssumptionOwner")
  ownedTasks       Task[]          @relation("TaskOwner")
}

model Priority {
  id    Int          @id @default(autoincrement())
  name  String
  color String       @default("#FFCC00")
  rank  Int          @default(0)
  items BudgetItem[]
}

model Category {
  id            Int    @id @default(autoincrement())
  projectId     Int    @default(1)
  name          String
  subcategories String @default("[]")

  @@unique([projectId, name])
}

model Settings {
  id        Int    @id @default(autoincrement())
  projectId Int    @default(1)
  key       String
  value     String

  @@unique([projectId, key])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  projectId Int      @default(1)
  timestamp DateTime @default(now())
  user      String   @default("System")
  category  String   @default("Budget Tracker")
  entity    String
  action    String
  entityId  Int?
  summary   String
}

model LaborCost {
  id         Int              @id @default(autoincrement())
  projectId  Int              @default(1)
  role       String
  personName String?
  mdRate     Float            @default(0)
  mdDays     Float            @default(0)
  costType   String           @default("Project")
  department String?
  notes      String?
  spent      Float?
  entries    LaborRoleEntry[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
}

model LaborRoleEntry {
  id          Int       @id @default(autoincrement())
  laborCostId Int
  laborCost   LaborCost @relation(fields: [laborCostId], references: [id], onDelete: Cascade)
  date        DateTime
  amount      Float
  note        String?
  createdAt   DateTime  @default(now())
}

model LaborSpentLog {
  id        Int      @id @default(autoincrement())
  projectId Int      @default(1)
  date      DateTime
  amount    Float
  note      String?
  createdAt DateTime @default(now())
}

// ── Testing ──────────────────────────────────────────────────────────────────

model TestSet {
  id        Int        @id @default(autoincrement())
  projectId Int        @default(1)
  name      String
  dateMin   DateTime?
  dateMax   DateTime?
  notes     String?
  testCases TestCase[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model TestCase {
  id        Int        @id @default(autoincrement())
  testSetId Int
  testSet   TestSet    @relation(fields: [testSetId], references: [id], onDelete: Cascade)
  name      String
  status    String     @default("WIP")
  notes     String?
  testedBy  String?
  testedAt  DateTime?
  dataUsed  String?
  order     Int        @default(0)
  steps     TestStep[]
  defects   Defect[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model TestStep {
  id         Int      @id @default(autoincrement())
  testCaseId Int
  testCase   TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  order      Int      @default(0)
  description String
  status     String   @default("WIP")
  testedBy   String?
  testedAt   DateTime?
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Defect {
  id          Int      @id @default(autoincrement())
  testCaseId  Int
  testCase    TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  title       String
  description String?
  severity    String   @default("Medium")
  status      String   @default("Open")
  reportedBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ── Risk Management ───────────────────────────────────────────────────────────

model Risk {
  id              Int                @id @default(autoincrement())
  projectId       Int                @default(1)
  title           String
  description     String?
  category        String             @default("technical")
  probability     Int                @default(3)
  impact          Int                @default(3)
  score           Int                @default(9)
  mitigationPlan  String?
  contingencyPlan String?
  ownerId         Int?
  owner           Person?            @relation("RiskOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  status               String             @default("Open")
  dateIdentified       DateTime           @default(now())
  reviewDate           DateTime?
  materializationDate  DateTime?
  scoreHistory         RiskScoreHistory[]
  issues          Issue[]
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
}

model RiskScoreHistory {
  id     Int      @id @default(autoincrement())
  riskId Int
  risk   Risk     @relation(fields: [riskId], references: [id], onDelete: Cascade)
  score  Int
  date   DateTime @default(now())
}

// ── Issue Tracker ─────────────────────────────────────────────────────────────

model Issue {
  id                    Int            @id @default(autoincrement())
  projectId             Int            @default(1)
  title                 String
  description           String?
  type                  String         @default("Bug")
  severity              String         @default("Medium")
  priority              String         @default("Medium")
  status                String         @default("Open")
  ownerId               Int?
  owner                 Person?        @relation("IssueOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  dateCreated           DateTime       @default(now())
  dueDate               DateTime?
  rootCause             String?
  linkedRiskId          Int?
  linkedRisk            Risk?          @relation(fields: [linkedRiskId], references: [id], onDelete: SetNull)
  linkedChangeRequestId Int?
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
}

// ── Change Management ─────────────────────────────────────────────────────────

model ChangeRequest {
  id                    Int      @id @default(autoincrement())
  projectId             Int      @default(1)
  title                 String
  description           String?
  changeType            String   @default("Scope")
  businessJustification String?
  budgetImpact          Float?
  timelineImpact        String?
  resourceImpact        String?
  riskImpact            String?
  requestedById         Int?
  requestedBy           Person?  @relation("CRRequestedBy", fields: [requestedById], references: [id], onDelete: SetNull)
  approvedById          Int?
  approvedBy            Person?  @relation("CRApprovedBy", fields: [approvedById], references: [id], onDelete: SetNull)
  approvalStatus        String   @default("Draft")
  linkedRiskIds         String   @default("[]")
  linkedIssueIds        String   @default("[]")
  linkedRequirements    String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

// ── Assumption Log ─────────────────────────────────────────────────────────────

model Assumption {
  id                      Int       @id @default(autoincrement())
  projectId               Int       @default(1)
  code                    String
  title                   String
  description             String?
  category                String    @default("Finance")
  phase                   String    @default("Design")
  type                    String    @default("Operational")
  source                  String    @default("Internal planning")
  validationMethod        String?
  status                  String    @default("Active")
  isLocked                Boolean   @default(false)
  ownerId                 Int?
  owner                   Person?   @relation("AssumptionOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  validationDate          DateTime?
  validatedAt             DateTime?
  budgetImpact            Float?
  timelineImpact          Int?
  scopeImpact             String    @default("Medium")
  invalidationProbability Int       @default(3)
  exposureScore           Int       @default(0)
  convertedRiskId         Int?
  notes                   String?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@unique([projectId, code])
}

// ── Auth ──────────────────────────────────────────────────────────────────────

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String
  passwordHash String
  role         String        @default("user")   // "superadmin" | "admin" | "user"
  permissions  String        @default("{}")     // JSON: {"assets":"write","testing":"read",...}
  active       Boolean       @default(true)
  companyId    Int?
  company      Company?      @relation(fields: [companyId], references: [id])
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  projects     ProjectUser[]
  archivedTasks Task[]       @relation("ArchivedTasks")
}

// ── Projects ──────────────────────────────────────────────────────────────────

model Project {
  id            Int             @id @default(autoincrement())
  companyId     Int             @default(1)
  company       Company         @relation(fields: [companyId], references: [id])
  name          String
  description   String?
  mode          String          @default("hybrid") // kanban | planned | hybrid
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  users         ProjectUser[]
  tasks         Task[]
  kanbanColumns KanbanColumn[]
}

model ProjectUser {
  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    Int
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([projectId, userId])
}

// ── Companies ─────────────────────────────────────────────────────────────────

model Company {
  id                  Int       @id @default(autoincrement())
  name                String
  slug                String    @unique
  active              Boolean   @default(true)
  planId              Int?
  plan                Plan?     @relation(fields: [planId], references: [id])
  trialEndsAt         DateTime?
  status              String    @default("trial") // trial | active | expired | blocked
  maxProjectsOverride Int?      // superadmin can override plan limit (null = use plan default)
  maxUsersOverride    Int?      // superadmin can override plan limit (null = use plan default)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  users               User[]
  projects            Project[]
  invoices            Invoice[]
}

// ── Plans ────────────────────────────────────────────────────────────────────

model Plan {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  slug         String    @unique
  sections     String    @default("[]")
  maxProjects  Int       @default(1)
  maxUsers     Int       @default(5)
  priceMonthly Float     @default(0)
  description  String?
  isDefault    Boolean   @default(false)
  isPublic     Boolean   @default(true)
  active       Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  companies    Company[]
}

// ── Invoices ─────────────────────────────────────────────────────────────────

model Invoice {
  id             Int       @id @default(autoincrement())
  companyId      Int
  company        Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  amount         Float
  variableSymbol String    @unique
  status         String    @default("pending")
  issuedAt       DateTime  @default(now())
  dueDate        DateTime
  paidAt         DateTime?
  notes          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// ── Project Plan + Kanban ────────────────────────────────────────────────────

model Task {
  id              Int            @id @default(autoincrement())
  projectId       Int
  project         Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parentId        Int?
  parent          Task?          @relation("TaskChildren", fields: [parentId], references: [id])
  children        Task[]         @relation("TaskChildren")

  name            String
  description     String?
  type            String         @default("task")        // phase | workstream | task
  ownerId         Int?
  owner           Person?        @relation("TaskOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  status          String         @default("not_started")  // not_started | in_progress | done | blocked
  progress        Int            @default(0)
  isMilestone     Boolean        @default(false)
  sortOrder       Int            @default(0)

  // Kanban (NOT NULL — every task must belong to a column)
  kanbanColumnId  Int
  kanbanColumn    KanbanColumn   @relation(fields: [kanbanColumnId], references: [id])
  kanbanOrder     Int            @default(0)

  // Planning (nullable)
  plannedStart    DateTime?
  plannedEnd      DateTime?
  baselineStart   DateTime?
  baselineEnd     DateTime?

  // Advanced (nullable)
  constraintType  String?
  constraintDate  DateTime?
  estimatedCost   Float?
  isCriticalPath  Boolean        @default(false)
  floatDays       Int?

  // Links
  linkedRiskId       Int?
  linkedAssumptionId Int?

  // Soft delete
  archived       Boolean   @default(false)
  archivedAt     DateTime?
  archivedById   Int?
  archivedByUser User?     @relation("ArchivedTasks", fields: [archivedById], references: [id])

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Dependencies
  incomingDeps   TaskDependency[] @relation("DepSuccessor")
  outgoingDeps   TaskDependency[] @relation("DepPredecessor")
}

model KanbanColumn {
  id        Int     @id @default(autoincrement())
  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name      String
  color     String  @default("#6B7280")
  sortOrder Int     @default(0)
  wipLimit  Int?
  tasks     Task[]

  @@unique([projectId, name])
}

model TaskDependency {
  id            Int    @id @default(autoincrement())
  predecessorId Int
  predecessor   Task   @relation("DepPredecessor", fields: [predecessorId], references: [id], onDelete: Cascade)
  successorId   Int
  successor     Task   @relation("DepSuccessor", fields: [successorId], references: [id], onDelete: Cascade)
  type          String @default("FS")  // FS | FF | SS | SF
  lagDays       Int    @default(0)

  @@unique([predecessorId, successorId])
}
